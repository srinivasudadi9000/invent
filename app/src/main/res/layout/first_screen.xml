<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/campstar_login"
     android:orientation="vertical"
    tools:context="com.maple.goindia.First_screen">

    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:background="@drawable/orange"
        android:gravity="center"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:background="@drawable/white"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/green"
                android:gravity="center">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="GoIndia"
                    android:textColor="#FFFFFF"
                    android:textSize="32dp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@drawable/roundbottomnect"
            android:gravity="center"
            android:weightSum="5">

            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="35dp"
                android:src="@drawable/communityvector" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="35dp"
                android:src="@drawable/notificationbell" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/campstar_logo_withouttxt"
                android:background="@drawable/circularwhiteshape" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="35dp"
                android:src="@drawable/event_vector" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="35dp"
                android:src="@drawable/chat_vector" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
